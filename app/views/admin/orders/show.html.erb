<% provide :title, t(".title", id: @order.id) %>
<h1><%= t(".title", id: @order.id) %></h1>
<div class="row">
  <div class="col-lg-6 mb-4">
    <div class="card mb-4">
      <div class="card-body">
        <h2><%= User.model_name.human %></h2>
        <%= render "admin/orders/user", user: @order.user %>
      </div>
    </div>
    <div class="card mb-4">
      <div class="card-body">
        <h2><%= Order.model_name.human %></h2>
        <%= render "admin/orders/order", order: @order %>
      </div>
    </div>
  </div>
  <div class="col-lg-6 mb-4">
    <div class="card">
      <div class="card-body">
        <h2><%= OrderItem.model_name.human %></h2>
        <%= render "admin/orders/order_items", order_items: @order.order_items %>
      </div>
    </div>
  </div>
</div>
